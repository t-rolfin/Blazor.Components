@namespace Rolfin.Blazor.Components

@code {
    [CascadingParameter(Name = "_tab")] RTabs? _tab { get; set; }


    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Name { get; set; } = string.Empty;


    public Guid Id { get; } = Guid.NewGuid();

    protected override void OnInitialized()
    {
        if (_tab is null) throw new ParentNotProvidedException("This component can be used just inside a \"RTabs\" component.");
        _tab?.AddTab(this);
    }


    public static RTab Empty => new RTab() { Name = "Empty" };
}
